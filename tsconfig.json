{
  "compilerOptions": {
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "allowJs": true,
  //  "checkJs": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": false, // try to set true
    "target": "es6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./types/",
    "sourceMap": true,
    "outDir": "./dist/"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

